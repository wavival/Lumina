---
interface Props {
  href?: string;
  selected?: boolean;
  class?: string;
}

const { href, selected = false, class: extra = "" } = Astro.props;
const base = `chip text-[var(--brand-blue)] bg-[var(--bg-blur)] rounded-2xl text-center px-2`;
---

{href ? <a href={href} class={`${base} ${extra}`}><slot /></a> : <button type="button" class={`${base} ${extra}`}><slot /></button>}