---
interface Props {
  href?: string;
  selected?: boolean;
  class?: string;
}

const { href, selected = false, class: extra = "" } = Astro.props;
const base = `chip ${selected ? "bg-[var(--ui-hover)]" : "hover:bg-[var(--ui-hover)]"}`;
---

{href
  ? <a href={href} class={`${base} ${extra}`}><slot /></a>
  : <button type="button" class={`${base} ${extra}`}><slot /></button>}