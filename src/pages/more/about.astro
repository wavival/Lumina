---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Link from "../../components/ui/Link.astro";
import Icon from "../../components/ui/Icon.astro";
export const prerender = true; 
---

<BaseLayout title="En construcción — Lúmina">
  <main class="h-screen grid place-items-center px-6 text-center bg-[var(--bg-page)] m-0 p-56 gap-6">
    <div class="space-y-8">
      <h1 class="text-[32px] font-bold text-[var(--brand-blue)]">Estamos construyendo algo especial para ti.</h1>

      <p class="text-[20px] text-[var(--text-primary)] opacity-90">Vuelve pronto y sé parte de la experiencia.</p>
    </div>

    <Icon src="/icons/illustrations/highlights/target.svg" size="lg" />

    <Link href="/" rel="noopener" class="inline-flex items-center justify-center rounded-md text-[var(--accent-link)] hover:bg-[var(--accent-link)]/10">Ir al inicio</Link>
  </main>
</BaseLayout>