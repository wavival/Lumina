---
/* IMPORTA aquí tus estilos de src/styles */
import "../../styles/global.css";     // dentro está @import de tokens y utilities
const { title = "Lúmina — Portafolio", description = "Valentina Ramírez" } = Astro.props;
---

<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <title>{title}</title>

    <script is:inline>
      const t = localStorage.getItem("theme");
      const prefers = window.matchMedia("(prefers-color-scheme: dark)").matches;
      if (t === "dark" || (!t && prefers)) document.documentElement.classList.add("dark");
    </script>
  </head>
  <body class="antialiased">
    <slot />
  </body>
</html>
