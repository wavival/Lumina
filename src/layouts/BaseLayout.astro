---
import "../../styles/global.css";
import "../../styles/tokens.css";
import NavBar from "../components/layout/NavBar.astro";
import Footer from "../components/layout/Footer.astro";

interface Props {
  title?: string;
  description?: string;
}
const { title = "Lúmina", description = "Portafolio de Valentina Ramírez" } = Astro.props;
---

<html lang="es" class="scroll-smooth bg-[var(--brand-light)] dark:bg-[var(--brand-dark)">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/brand/lumina-logo-light.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@0,100..900;1,100..900&family=Raleway:wght@400;500;600&display=swap" rel="stylesheet">
  </head>

  <body class="min-h-dvh bg-[var(--brand-light)] dark:bg-[var(--brand-dark) text-[var(--ui-text)] antialiased">
    <NavBar />
    <main><slot /></main>
    <Footer />
    <script type="module">
      import "../scripts/theme-toggle.ts";
      import "../scripts/nav-menu.ts";
    </script>
  </body>
</html>